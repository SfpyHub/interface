{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      // Allows for the parsing of JSX
      "jsx": true
    }
  },

  "ignorePatterns": [
    "node_modules/**/*"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react/jsx-pascal-case": 0
  }
}